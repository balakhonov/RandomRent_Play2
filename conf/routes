# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET      /                       controllers.Application.index

# /ua/Киев?page=1&adtype=1&period=1&rooms=1&prf=1500&prt=2500&dist=14&fu=true
GET      /ua                     controllers.Application.index
GET      /ua/                    controllers.Application.index
GET      /ua/:city               controllers.Apartments.show(city,page:Int?= 1)
GET      /ua/:city/:page         controllers.Apartments.show(city,page:Int)

GET      /add                    controllers.Application.add()
GET      /add/                   controllers.Application.add()

# Apartment page
GET      /update-apartment/:id   controllers.Apartments.get(id:Int)
GET      /add-apartment          controllers.Apartments.addApartment()
GET      /add-apartment/         controllers.Apartments.addApartment()
POST     /apartment              controllers.Apartments.create(archived:Boolean=true,moderated:Boolean=true)
POST     /apartment/             controllers.Apartments.create(archived:Boolean=true,moderated:Boolean=true)
PUT      /apartment/:id          controllers.Apartments.update(id:Int)
DELETE   /apartment/:id          controllers.Apartments.delete(id:Int)

GET      /echo                   controllers.Application.echo
GET      /todo                   controllers.Application.TODO

# Map static resources from the /public folder to the /assets URL path
GET      /assets/*file           controllers.Assets.at(path="/public", file)
